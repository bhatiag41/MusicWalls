<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/cardview_dark_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="@string/main_btn_settings"
        app:titleTextColor="@color/glass_text"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:navigationIconTint="@color/glass_text" />

    <com.music.wallpaper.ui.components.GlassCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/glass_border"
        app:cardBackgroundColor="@color/glass_surface">

        <FrameLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </com.music.wallpaper.ui.components.GlassCardView>

</LinearLayout>
