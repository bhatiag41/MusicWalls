<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Background removed for performance -->

    <!-- Glass Overlay UI -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:context=".MainActivity">

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="48dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- App Title / Header (Minimalist) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                     android:layout_marginBottom="32dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="@string/app_name"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/glass_text"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_hero_subtitle"
                        android:textSize="14sp"
                        android:textColor="@color/glass_text_secondary"
                        android:layout_marginTop="4dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2" />
                </LinearLayout>

                <!-- Permission Status Glass Card -->
                <com.music.wallpaper.ui.components.GlassCardView
                    android:id="@+id/permissionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/glass_border"
                    app:cardBackgroundColor="@color/glass_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/permissionIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_dialog_alert"
                                android:contentDescription="@string/main_permission_title"
                                app:tint="@color/glass_text" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/main_permission_title"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/glass_text" />

                                <TextView
                                    android:id="@+id/permissionStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/main_permission_denied"
                                    android:textSize="14sp"
                                    android:textColor="@color/glass_text_secondary"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/main_permission_explanation"
                            android:textSize="14sp"
                            android:textColor="@color/glass_text_secondary"
                            android:lineSpacingMultiplier="1.2" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEnableNotification"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/main_enable_notification"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/glass_surface_strong"
                            app:cornerRadius="28dp"
                            app:elevation="0dp"
                            app:strokeColor="@color/glass_border"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </com.music.wallpaper.ui.components.GlassCardView>

                <!-- Current Music Glass Card -->
                <com.music.wallpaper.ui.components.GlassCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/glass_border"
                    app:cardBackgroundColor="@color/glass_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="@string/main_current_music_title"
                            app:tint="@color/glass_text"
                            android:background="@drawable/glass_round_bg"
                            android:padding="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/main_current_music_title"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/glass_text" />

                            <TextView
                                android:id="@+id/currentMusicText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/main_no_music"
                                android:textSize="14sp"
                                android:textColor="@color/glass_text_secondary"
                                android:layout_marginTop="4dp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </LinearLayout>

                </com.music.wallpaper.ui.components.GlassCardView>

                <!-- Quick Actions Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_quick_actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="8dp" />

                <!-- Single Set Wallpaper Card (opens preview first) -->
                <com.music.wallpaper.ui.components.GlassCardView
                    android:id="@+id/btnSetWallpaper"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/glass_border"
                    app:cardBackgroundColor="@color/glass_surface_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="@string/main_btn_set_wallpaper"
                            app:tint="@color/glass_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_btn_set_wallpaper"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/glass_text"
                            android:textAlignment="center"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preview &amp; apply your wallpaper"
                            android:textSize="12sp"
                            android:textColor="@color/glass_text_secondary"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.music.wallpaper.ui.components.GlassCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/main_btn_settings"
                    android:textColor="@color/glass_text"
                    app:icon="@android:drawable/ic_menu_preferences"
                    app:iconTint="@color/glass_text"
                    app:backgroundTint="@color/glass_surface"
                    app:cornerRadius="28dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/glass_border"
                    app:strokeWidth="1dp" />

                <!-- Bottom Spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>